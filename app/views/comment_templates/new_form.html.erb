
<!-- Validation failure messages -->
<% if @comment.present? %>
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>


<h1>
  Add a new comment
</h1>

<hr>

<form action="/create_comment" method="post">

  <!-- Label and input for photo_id -->

  <div class="form-group">
    <label for="photo_id">
      Photo
    </label>


    <input type="text" id="photo_id" name="photo_id" class="form-control" value="<%= @comment.try(:photo_id) %>">

  </div>



  <!-- Label and input for body -->

  <div class="form-group">
    <label for="body">
      Body
    </label>


    <textarea id="body" name="body" class="form-control" rows="3"><%= @comment.try(:body) %></textarea>

  </div>



  <!-- Label and input for user_id -->

  <div class="form-group">
    <label for="user_id">
      User
    </label>


    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @comment.try(:user_id) %>">

  </div>



  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>

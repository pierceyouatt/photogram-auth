<h1>
  All users
</h1>

<hr>
<%= @users.column_names %>
<table class="table">
  <tr>
    <th>
      ID
    </th>


    <th>
      Username
    </th>


    <th>
      E-mail
    </th>

  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>


    <td>
      <%= user.username %>
    </td>


    <td>
      <%= user.email %>
    </td>


    <td>
      <a href="/users/<%= user.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
